NVCC = nvcc
CFLAGS = -I. -g -L/usr/local/cuda-6.5/targets/x86_64-linux/lib/
LIBS = -lGL -lGLU -lglut -lGLEW -ltiff -lcuda -lcudart 

DEPS = gl_helper.h integrator.h 
OBJ_wall = wall.o integrator.o gl_helper.o
OBJ_sim = sim2d.o gl_helper.o integrator.o

%.o: %.cu $(DEPS)
	$(NVCC) -c -o $@ $< $(CFLAGS)

wall: $(OBJ_wall)
	$(NVCC) -o $@ $^ $(LIBS) $(CFLAGS)
	
sim2d: $(OBJ_sim)
	$(NVCC) -o $@ $^ $(LIBS) $(CFLAGS)
